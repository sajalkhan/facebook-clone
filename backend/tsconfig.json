{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "config-overrides.js"],
  "exclude": ["node_modules", "build", "scripts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}